<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.congratulationsonbecomingpresident.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/my_width"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/trump1" />

    <ImageView
        android:layout_width="@dimen/my_width"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/trump2"
        android:id="@+id/imageView3" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <TextView
        android:layout_width="@dimen/my_width"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/my_text_size"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/textView1"/>
        <TextView
            android:layout_width="@dimen/my_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/textView2"/>
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/my_width"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/trump3" />

            <ImageView
                android:layout_width="@dimen/my_width"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/trump4" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/my_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/textView3"/>
        <TextView
            android:layout_width="@dimen/my_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/textView4"/>
    </LinearLayout>
</LinearLayout>







